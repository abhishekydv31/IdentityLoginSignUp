@{
}
@model Student
<form id="create-form" method="post" asp-page="Index" asp-route-id="@Model.Id" asp-page-handler="CreateOrEdit" onsubmit="return jQueryModalPost(this);">
    <div class="form-group row">
        <label class="col-md-3 col-form-label">Name</label>
        <div class="col-md-9">
            <input type="text" autocomplete="off" asp-for="Name" name="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label">Age</label>
        <div class="col-md-9">
            <input type="text" autocomplete="off" asp-for="Age" name="Age" class="form-control">
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label">Standard</label>
        <div class="col-md-9">
            <input type="text" autocomplete="off" asp-for="Standard" name="Standard" class="form-control">
            <span asp-validation-for="Standard" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label">FatherName</label>
        <div class="col-md-9">
            <input type="text" autocomplete="off" asp-for="FatherName" name="FatherName" class="form-control" />
            <span asp-validation-for="FatherName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label">Mothername</label>
        <div class="col-md-9">
            <input type="text" autocomplete="off" asp-for="MotherName" name="MotherName" class="form-control" />
            <span asp-validation-for="MotherName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
        </div>
    </div>
    <div class="form-group justify-content-between">
        <button type="button" class="btn btn-secondary close-button" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary save-button">Save</button>
    </div>

</form>
<script type="text/javascript" language=javascript>
    $.validator.unobtrusive.parse(document);
</script>